{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach LLDB to QEMU (riscv64)",
      "type": "lldb",
      "request": "attach",
      "targetCreateCommands": [
        "target create ${workspaceFolder}/target/riscv64gc-unknown-none-elf/release/kernel"
      ],
      "processCreateCommands": [
        "gdb-remote 1234"
      ],
      "initCommands": [
        "settings set plugin.process.gdb-remote.packet-timeout 60"
      ]
    }
  ]
}