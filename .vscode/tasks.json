{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-kernel",
      "type": "shell",
      "command": "cargo +nightly build",
      "args": ["--target", "riscv64gc-unknown-none-elf"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "qemu-debug",
      "type": "shell",
      "isBackground": true,
      "command": "qemu-system-riscv64",
      "args": [
        "-machine", "virt",
        "-bios", "none",
        "-serial", "mon:stdio",

        "-S",
        "-gdb", "tcp::1234",

        "-kernel", "${workspaceFolder}/target/riscv64gc-unknown-none-elf/debug/kernel"
      ],
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*"
        }
      }
    }
  ]
}
